{
  "name": "rkta-starter-apollo-server",
  "version": "1.0.0",
  "description": "A backend for new rkta-starter-apollo",
  "scripts": {
    "build": "tsc",
    "deploy": "now --prod",
    "check:all": "npm run test && npm run lint && npm run typecheck",
    "commit": "git-cz",
    "dev": "NODE_ENV=development ts-node-dev --watch src/**/*.graphql src/server/start.ts",
    "prebuild": "npm run check:all && cd src && find . -type f -name *.graphql -exec install -D {} ../build/{} \\;",
    "lint": "eslint config src --ext .js,.ts",
    "now-build": "exit 0",
    "predeploy": "npm run check:all && ts-node scripts/collect-schema.ts && apollo service:push",
    "prepro": "npm run build",
    "pro": "NODE_ENV=production node build/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "updatedeps": "ncu -u && npm update"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "author": "Sergei Droganov",
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.20",
    "@types/node-fetch": "^2.5.4",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "apollo": "^2.21.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-transform-graphql": "^2.1.0",
    "now": "^16.7.0",
    "npm-check-updates": "^4.0.1",
    "prettier": "^1.19.1",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.7.3"
  },
  "dependencies": {
    "@now/node": "^1.3.0",
    "apollo-datasource": "^0.6.3",
    "apollo-server": "^2.9.15",
    "apollo-server-core": "^2.9.14",
    "apollo-server-lambda": "^2.9.14",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "graphql-import": "^0.7.1",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.0.5",
    "graphql-tools": "^4.0.6",
    "lodash": "^4.17.15"
  }
}
